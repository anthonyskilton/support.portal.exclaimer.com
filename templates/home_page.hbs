<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<section class="section hero">
  <div class="hero-inner">
    <h2><strong>How can we help?</strong></h2>
    <p>Start by typing a question or topic below.</p>
    {{search submit=false instant=settings.instant_search class='search search-full'}}
  </div>
</section>

<section class="section whats-new">
  <div class="container whats-new-container">
    <a href="" title="Whats new in Exclaimer Cloud" class="whats-new-link">
      <h3>Whats new in Exclaimer Cloud</h3>
      <p class="whats-new-p">Releases and changes to Exclaimer Cloud</p>
    </a>
    <a href="" title="Whats new in Exclaimer Cloud" class="whats-new-btn">
      Read more
    </a>
  </div>
</section>

<section class="main-section">
  <div class="left-col">
    <h2>Choose a category below</h2>
    {{#each categories}}
      {{#each sections}}
      <section class="section">
        <a href="{{url}}">
          <h3>{{name}}</h3>
        </a>
      </section>
      {{/each}}
    {{/each}}
  </div>  
  <div class="right-col">
    {{#if settings.show_recent_activity}}
      {{recent_activity}}
    {{/if}}
  </div>
</section>
